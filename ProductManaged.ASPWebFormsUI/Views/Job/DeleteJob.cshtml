@model ProductManaged.Entities.Concrete.Job
@{
    ViewData["Title"] = "DeleteJob";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Meslek Sil</h1>
<form method="post">
    @Html.Label("Meslek ID : ")
    @Html.TextBoxFor(j => j.JobId, new { @class = "form-control"})
    <br />
    @Html.Label("Meslek Adı : ")
    @Html.TextBoxFor(j => j.JobName, new { @class = "form-control" })
    @Html.ValidationMessageFor(j => j.JobName);
    <br />
    <button class="btn btn-danger">Sil</button>
</form>

