@using ProductManaged.Entities.Concrete
@model List<Job>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Meslekler</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Meslek Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.JobId</td>
            <td>@item.JobName</td>
            <td><a href="/Job/DeleteJob/@item.JobId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Job/UpdateJob/@item.JobId" class="btn btn-outline-warning">Güncelle</a></td>
            <td><a href="/Job/DetailsJob/@item.JobId" class="btn btn-outline-info">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Job/AddJob/" class="btn btn-outline-primary">Meslek Ekle</a>
