@using ProductManaged.Entities.Concrete
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Müşteriler</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Müşteri Adı</th>
        <th>Şehir</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CustomerId</td>
            <td>@item.CustomerName</td>
            <td>@item.CustomerCity</td>
            <td><a href="/Customer/DeleteCustomer/@item.CustomerId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-outline-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Customer/AddCustomer/" class="btn btn-outline-primary">Müşteri Ekle</a>